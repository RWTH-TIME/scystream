{{task_id}} = DockerOperator(
            task_id='{{task_id}}',
            image='{{image}}',
            api_version='auto',
            auto_remove=True,
            command="python worker.py",
            docker_url="unix://var/run/docker.sock",
            mounts=[
                Mount(
                    source="{{local_storage_path_external}}",
                    target="/data",
                    type="bind",
                ),
            ],
            environment={
                "NAME": "{{name}}",
                "UUID": "{{uuid}}",
                "DEPENDENCY_UUID": "{{dependency}}",
                "PROJECT_UUID": "{{project}}",
                "ALGORITHM": "{{algorithm}}",
                "PARAMETERS": """{{parameters}}""",
                "CONTAINER_NAME": "{{container_name}}",
                "LOCAL_STORAGE_PATH": "/data",
            },
        )

