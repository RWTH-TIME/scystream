{{task_id}} = DockerOperator(
            task_id='{{task_id}}',
            image='{{image}}',
            api_version='auto',
            auto_remove=True,
            command="python worker.py",
            docker_url="unix://var/run/docker.sock",
            mounts=[
                Mount(
                    source="{{local_storage_path_external}}",
                    target="/data",
                    type="bind",
                ),
            ],
            environment="{{env}}",
        )

